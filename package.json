{
  "name": "tui-mcp",
  "version": "1.0.0",
  "description": "MCP server for controlling Terminal UI applications",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run dev:watch & npm run dev:server",
    "dev:watch": "tsc --watch",
    "dev:server": "nodemon",
    "sample-tui": "node dist/sample-tui/index.js"
  },
  "keywords": [
    "mcp",
    "tui",
    "terminal",
    "claude-code"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "blessed": "^0.1.81",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^22.0.0",
    "nodemon": "^3.1.11",
    "typescript": "^5.7.0"
  }
}
